                @for (int j = i; j < i + 5 && j < products.Count; j++)
                {
                    <ProductListItem product="@products[j]" />
                }
            </div>
        } *@

@*           @foreach (var product in products)
          {

             <ProductListItem product="@product" />

          } *@
        
    }
</div>

